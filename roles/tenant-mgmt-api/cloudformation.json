{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Zetta Router ASG",
  "Parameters": {
    "InstanceType" : {
      "Description" : "EC2 HVM instance type (m3.medium, etc).",
      "Type" : "String",
      "Default" : "t2.micro"
    },
    "AMI": {
      "Description": "A unique AMI id for our custom CoreOS build using packer.",
      "Type": "String"
    },
    "KeyPair" : {
      "Description" : "The name of an EC2 Key Pair to allow SSH access to the instance.",
      "Type" : "String"
    },
    "ZettaStack" : {
      "Description" : "Zetta Stack",
      "Type" : "String"
    },
    "CoreOsSecurityGroup" : {
      "Description" : "Coreos security group to access etcd",
      "Type" : "AWS::EC2::SecurityGroup::Id"
    }
  },

  "Resources": {

    "TenantMgmtRole": {
       "Type": "AWS::IAM::Role",
       "Properties": {
          "AssumeRolePolicyDocument": {
             "Version" : "2012-10-17",
             "Statement": [ {
                "Effect": "Allow",
                "Principal": {
                   "Service": [ "ec2.amazonaws.com" ]
                },
                "Action": [ "sts:AssumeRole" ]
             } ]
          },
          "Path": "/",
          "Policies": [
            {
            "PolicyName": "CLIROAccess",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "ec2:Describe*"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "autoscaling:Describe*"
                  ],
                  "Resource": "*"
                }
              ]
            }
           }
          ]
        }
    },

    "TenantMgmtRoleInstanceProfile": {
       "Type": "AWS::IAM::InstanceProfile",
       "Properties": {
          "Path": "/",
          "Roles": [ {
             "Ref": "TenantMgmtRole"
          } ]
       }
    },

    "InstanceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Instance security group.",
        "SecurityGroupIngress": [
          {"IpProtocol": "tcp", "FromPort": "80", "ToPort": "80", "CidrIp": "0.0.0.0/0"}
        ]
      }
    },
    "Instance" : {
      "Type" : "AWS::EC2::Instance",
      "Properties" : {
        "ImageId" : { "Ref": "AMI" },
        "KeyName" : { "Ref": "KeyPair" },
        "InstanceType" : { "Ref": "InstanceType" },
        "Monitoring": true,
        "SecurityGroupIds": [{ "Ref": "CoreOsSecurityGroup" }, {"Fn::GetAtt": ["InstanceSecurityGroup", "GroupId"]} ],
        "IamInstanceProfile": {"Ref" : "TenantMgmtRoleInstanceProfile" },
        "Tags": [
            {"Key": "zetta:stack", "Value": { "Ref" : "ZettaStack" } },
            {"Key": "Name", "Value": { "Fn::Join": [ "-", [ {"Ref" : "ZettaStack"}, "tenant-mgmt-api"]] } }
        ],
        "UserData" : null
      }
    }
  }
}
