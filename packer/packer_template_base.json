{
  "variables": {
    "aws_access_key": "@@AWS_ACCESS_KEY@@",
    "aws_secret_key": "@@AWS_SECRET_KEY@@",
    "checksum": "@@COREOS_MD5_HASH@@",
    "channel": "stable",
    "version": "current",
    "checksum_type":"md5",
    "output_name": "new"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key` }}",
    "secret_key": "{{user `aws_secret_key` }}",
    "region": "us-east-1",
    "source_ami": "ami-cbfdb2a1",
    "instance_type": "t2.micro",
    "ssh_username": "core",
    "ami_name": "{{user `output_name`}}-coreos-{{timestamp}}",
    "ami_block_device_mappings": [
      {
        "device_name": "/dev/xvda",
        "virtual_name": 20
      }
    ],
    "tags": {

    }
  },
  {
    "type": "virtualbox-iso",
    "headless": true,
    "vm_name": "{{user `output_name`}}-coreos-{{user `channel`}}",
    "iso_checksum": "{{user `checksum`}}",
    "iso_checksum_type": "{{user `checksum_type`}}",
    "iso_url": "http://{{user `channel`}}.release.core-os.net/amd64-usr/{{user `version`}}/coreos_production_iso_image.iso",
    "http_directory": "files",
    "ssh_port": 22,
    "ssh_username": "core",
    "ssh_key_path": "files/vagrant",
    "ssh_wait_timeout": "10m",
    "guest_os_type": "Linux26_64",
    "disk_size": 40960,
    "vboxmanage": [
      [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
      [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
    ],
    "guest_additions_mode": "disable",

    "boot_command": [
      "sudo -i<enter>",
      "systemctl stop sshd.socket<enter>",
      "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.yml<enter>",
      "coreos-install -d /dev/sda -C {{user `channel`}} -c install.yml<enter>",
      "reboot<enter>"
    ],
    "boot_wait": "30s",
    "shutdown_command": "sudo -S shutdown -P now",

    "output_directory": "builds/{{user `output_name`}}-packer-coreos-{{user `channel`}}-{{user `version`}}-virtualbox",
    "virtualbox_version_file": ".virtualbox_version"
  }],
  "provisioners":[{
    "type": "shell",
    "only": ["virtualbox-iso"],
    "inline": [
      "wget --no-check-certificate -O authorized_keys 'https://github.com/mitchellh/vagrant/raw/master/keys/vagrant.pub'",
      "mv authorized_keys /home/core/.ssh",
      "chown -R  core /home/core/.ssh",
      "sudo rm -rf /var/lib/coreos-install"
    ]
  },
  {
    "type": "file",
    "only": ["amazon-ebs"],
    "source": "files/authorized_keys",
    "destination": "/home/core/.ssh/authorized_keys"
  },
  {
    "type": "shell",
    "inline": "sudo rm /etc/machine-id"
  },
  {
    "type": "shell",
    "inline": "docker pull rabbitmq:3-management"
  },
  {
    "only": ["virtualbox-iso"],
    "type": "shell",
    "inline": "docker pull adammagaluk/elasticmq"
  },
  {
    "only": ["virtualbox-iso"],
    "type": "shell",
    "inline": "docker pull postgres"
  },
  {
    "only": ["amazon-ebs"],
    "type": "shell",
    "inline": "docker pull mdobson/statsd-elasticsearch"
  },
  {
    "only": ["amazon-ebs"],
    "type": "shell",
    "inline": "docker pull zetta/link-metrics-collector"
  },
  {
    "only": ["amazon-ebs"],
    "type": "shell",
    "inline": "docker pull zetta/link-container-metrics-collector"
  },
  {
    "only": ["amazon-ebs"],
    "type": "shell",
    "inline": "docker pull zetta/etcd-aws-cluster"
  },
  {
    "only": ["amazon-ebs"],
    "type": "shell",
    "inline": "docker pull logstash"
  },
  {
    "only": ["amazon-ebs"],
    "type": "file",
    "source": "journal2logstash.sh",
    "destination": "/home/core/journal2logstash.sh"
  },
  {
    "type": "shell",
    "inline": "docker pull zetta/zetta-mqtt-external-broker"
  },
  {
    "type": "shell",
    "inline": "docker pull zetta/zetta-mqtt-internal-broker"
  },
  {
    "type": "shell",
    "inline": "docker pull zetta/link-credential-api"
  }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "builds/{{user `output_name`}}_coreos-packer.box"
        }
      }
    }
  ]
}
