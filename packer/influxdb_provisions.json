{
  "variables": {
    "output_name": "influxdb"
  },
  "ami_tags": {
    "zetta:influxdb": true
  },
  "provisioners": [
    {
      "type": "file",
      "source": "services",
      "destination": "/home/core"
    },
    {
      "type": "shell",
      "inline": "sudo cp -R /home/core/services/* /etc/systemd/system"
    },
    {
      "type": "file",
      "source": ".dockercfg",
      "destination": "/home/core/.dockercfg"
    },
    {
      "type": "shell",
      "inline": [
        "docker pull adammagaluk/influxdb"
      ]
    }
  ]
}
