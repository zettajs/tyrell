[Unit]
Description=MQTT Internal Broker
After=docker.service
Requires=docker.service

[Service]
User=core
TimeoutStartSec=0
Restart=always
RestartSec=5
EnvironmentFile=/etc/environment
EnvironmentFile=/etc/profile.d/zetta
ExecStartPre=-/usr/bin/docker kill link-mqtt-internal-broker
ExecStartPre=-/usr/bin/docker rm link-mqtt-internal-broker
ExecStart=/usr/bin/docker run --rm --name link-mqtt-internal-broker -e PORT=2883 -p 2883:2883 --env-file /etc/profile.d/zetta -e BROKER_URL=${RABBITMQ_URL} zetta/zetta-mqtt-internal-broker
ExecStop=/usr/bin/docker stop link-mqtt-internal-broker
