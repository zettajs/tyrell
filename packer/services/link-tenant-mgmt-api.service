[Unit]
Description=Link Tenant Management API
After=docker.service
Requires=docker.service

[Service]
User=core
TimeoutStartSec=0
Restart=always
RestartSec=5
EnvironmentFile=/etc/environment
EnvironmentFile=/etc/profile.d/zetta
ExecStartPre=-/usr/bin/docker kill link-tenant-mgmt-api
ExecStartPre=-/usr/bin/docker rm link-tenant-mgmt-api
ExecStart=/usr/bin/docker run --rm --name link-tenant-mgmt-api --env-file /etc/environment --env-file /etc/profile.d/zetta -e AWS_REGION="us-east-1" -e PORT=2000 -p 80:2000 zetta/link-tenant-mgmt-api
ExecStop=/usr/bin/docker stop link-tenant-mgmt-api
